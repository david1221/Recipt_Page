
@model ReceptsPage.IdentityViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Փոփոխել գաղտնաբառը";
}
<h2>Օգտատեր  @Model.Email փոփոխել գաղտնաբառը</h2>
<form asp-action="ChangePassword" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    <div class="form-group">
        <label asp-for="OldPassword" class="control-label">Հին գաղտնաբառ</label>
        <input type="text" asp-for="OldPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">Նոր գաղտնաբառ</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="պահպանել" class="btn btn-default" />
    </div>
</form>
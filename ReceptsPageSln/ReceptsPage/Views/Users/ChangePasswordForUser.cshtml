@model ReceptsPage.IdentityViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password Fot User";
}


<h2>Գաղտնաբառի փոփոխություն  @Model.Email ի համար ։ ID  @Model.Id</h2>
<form asp-action="ChangePasswordForUser" asp-controller="Users" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />

    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">Նոր գաղտնաբառ</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Պահպանել" class="btn btn-outline-dark" />
        <a asp-action="Index" class="btn btn-primary">Չեղարկել</a>
    </div>
</form>
@model SinglePageVieModel
@{
    ViewData["Title"] = "SinglePage";
}

<div class="col-md-12 ">



    <h1 class="text-center single-page-h1">@Model.articleP.Title</h1>
    <div class="col-lg-11 single-page-desc">
        <div class="single-page-p" style="white-space: pre-wrap;">@Model.articleP.Description</div>

        <div class="content-justify ">
            @{
                var base64 = Convert.ToBase64String(Model.articleP.ImgGeneral ?? new byte[0]);
                var imgsrc = string.Format("data:image/jpeg;base64,{0}", base64);
            }
            @if (!string.IsNullOrEmpty(base64))
            {
                <img class="single-page-img" src="@imgsrc" />
            }

        </div>


    </div>
</div>
@try
{

    @if ((User.IsInRole("admin")))
    {<div class="row" style="margin-bottom:30px">
            <div class="text-center col-xs-6 h4">

                <a class="text-left" style="margin:5px 0px" asp-controller="Articles" asp-action="ArticlesDelete" asp-route-id="@Model.articleP.ArticleId"> <input class="btn btn-danger" type="button" id="Submit1" value="Ջնջել բաղադրատոմսը" /></a>
            </div>
            <div class="text-center col-xs-6 h4 "> <a asp-area="" asp-controller="Articles" asp-action="Articlesedit" asp-route-userName="@Model.articleP.AppUser.Email" asp-route-id="@Model.articleP.ArticleId" class="text-right col-lg-11 btn btn-primary">Փոփոխել</a></div>
        </div>
    }
    else
    {
        if ((User.IsInRole("user") && User.Identity.Name == Model.articleP.AppUser.Email))
        {
            <div class="row" style="margin-bottom:30px">
                <div class="text-center  h4"> <a asp-area="" asp-controller="Articles" asp-action="Articlesedit" asp-route-userName="@Model.articleP.AppUser.Email" asp-route-id="@Model.articleP.ArticleId" class="text-center  btn btn-primary">Փոփոխել</a></div>
            </div>
        }
    }

}

catch (Exception)

{
    ;
}

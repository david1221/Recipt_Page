@model ArticleP

@{
    ViewData["Title"] = "Ավելացնել բաղադրատոմս";
}




<div class="row">
    <div class="col-lg-10">
        <H1 class="single-page-h1">Ավելացնել Բաղադրատոմս</H1>

        <div class="col-md-8 ">
            <form asp-controller="Articles" asp-action="AddArticle" method="post" enctype="multipart/form-data">


                <input type="hidden" asp-for="ArticleId" />
                
                <div asp-validation-summary="ModelOnly"></div>



                <div class="form-group">
                    <label asp-for="Title" class="text-left">
                        Անվանումը
                    </label>
                    <div>
                        <input asp-for="Title" type="text" required autocomplete="off" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group">
                    <label asp-for="Description" class="text-left">
                        Նկարագիրը
                    </label>

                    <div>
                        <textarea asp-for="Description" rows="10" cols="50" required></textarea>

                    </div>
                    <span asp-validation-for="Description"></span>

                </div>
                <div class="from-group">
                    <img src="/images/uploadButton.png" id="upfile1" style="cursor:pointer;width:250px;" />
                    <input type="file" id="image" name="image" style="display:none" />

                    <script>
                        $("#upfile1").click(function () {
                            $("#image").trigger('click');
                        });</script>
                </div>
                <div class="form-group">


                    @{ <select asp-for="SubCategoryId"
                               asp-items="@(new SelectList(ViewBag.Category,"SubCategoryId","Name"))">
                            <option selected="selected" value="26">Ընտրեք բաժինը</option>
                        </select>
                    }

                </div> @if (User.IsInRole("admin"))
                {
                    <div class="form-group">
                        <label class="text-left">Սլայդի համար ավելացնել</label>
                        <input type="checkbox" asp-for="IfFavorite" style="height:30px;width:30px" />

                    </div>


                    <div class="form-group">
                        <label class="text-left">Գլխավոր էջի համար ավելացնել</label>
                        <input type="checkbox" asp-for="AdminConfirm" style="height:30px;width:30px" />

                    </div>
                }
                <div class="form-group">
                    <input class="text-left btn btn-default" type="submit" value="Ավելացնել" />
                </div>



            </form>
        </div>
    </div>


</div>
@model ArticleP

@{
    ViewData["Title"] = "Ավելացնել բաղադրատոմս";
}

<link href="~/lib/Trumbowyg-master/dist/ui/trumbowyg.min.css" rel="stylesheet" />

<div class="row">
    <div class="col-lg-10">
        <H1 class="single-page-h1">Ավելացնել Բաղադրատոմս</H1>

        <div>
            <form asp-controller="Articles" asp-action="AddArticle" method="post" enctype="multipart/form-data">


                <input type="hidden" asp-for="ArticleId" />

                <div asp-validation-summary="ModelOnly"></div>



                <div class="form-group">
                    <label asp-for="Title" class="text-left">
                        Անվանումը
                    </label>
                    <div>
                        <input asp-for="Title" type="text" required autocomplete="off" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group">
                    <label asp-for="Description" class="text-left">
                        Նկարագիրը
                    </label>


                    <div class="page-wrapper box-content">

                        <textarea asp-for="Description" required class="contentTextArea"></textarea>

                    </div>

                    <span asp-validation-for="Description"></span>

                </div>

                <div class="from-group">
                    <div class="box">
                        <input type="file" id="file-1" name="image" accept="image/*" asp-for="@Model.ImgGeneral" class="inputfile inputfile-1" />
                        <label for="file-1"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z" /></svg> <span>Ավելացնել նկար&hellip;</span></label>
                    </div>



                </div>
                <div class="form-group">


                    @{ <select asp-for="SubCategoryId"
                               asp-items="@(new SelectList(ViewBag.Category,"SubCategoryId","Name"))">
                            <option selected="selected" value="17">Ընտրեք բաժինը</option>
                        </select>
                    }

                </div> @if (User.IsInRole("admin"))
                {
                    <div class="form-group">
                        <label class="text-left">Սլայդի համար ավելացնել</label>
                        <input type="checkbox" asp-for="IfFavorite" style="height:30px;width:30px" />

                    </div>


                    <div class="form-group">
                        <label class="text-left">Գլխավոր էջի համար ավելացնել</label>
                        <input type="checkbox" asp-for="AdminConfirm" style="height:30px;width:30px" />

                    </div>
                }
                <div class="form-group">
                    <input class="text-left btn btn-default" type="submit" value="Ավելացնել" />
                </div>



            </form>
        </div>
    </div>


</div>


<script src="~/js/custom-file-input.js"></script>


@section scriptsEditor{
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
}
<script src="~/lib/Trumbowyg-master/dist/trumbowyg.js"></script>
<script src="~/lib/Trumbowyg-master/dist/plugins/table/trumbowyg.table.min.js"></script>
<script src="~/lib/Trumbowyg-master/dist/plugins/colors/trumbowyg.colors.min.js"></script>
<script>
    $('.contentTextArea').trumbowyg({
        btn: [
            ['foreColor', 'backColor']
        ]
    });
</script>
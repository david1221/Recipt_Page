@model ArticleP




<div class="row">
    <div class="col-lg-10">
        <H1 class="single-page-h1">Փոփոխել Բաղադրատոմս</H1>

        <div class="col-md-8 ">
            <form asp-controller="Articles" asp-action="ArticlesEdit" method="post" enctype="multipart/form-data">


                <input type="hidden" asp-for="ArticleId" />
                <input type="hidden" asp-for="ImgGeneral" />
                <div asp-validation-summary="ModelOnly"></div>



                <div class="form-group">
                    <label asp-for="Title" class="text-left">
                        Անվանումը
                    </label>
                    <div>
                        <input asp-for="Title" type="text" value="@Model.Title" required autocomplete="off" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group">
                    <label asp-for="Description" class="text-left">
                        Նկարագիրը
                    </label>

                    <div>
                        <textarea asp-for="Description" value="@Model.Description" rows="10" cols="50" required></textarea>

                    </div>
                    <span asp-validation-for="Description"></span>

                </div>
                <div class="from-group">
                    <div class="content-justify ">
                        @{
                            var base64 = Convert.ToBase64String(Model.ImgGeneral ?? new byte[0]);
                            var imgsrc = string.Format("data:image/jpeg;base64,{0}", base64);

                        }
                        <input type="image" class="single-page-img" name="model1" asp-for="ImgGeneral" id="model1" src="@imgsrc" value="@imgsrc">
                    </div>


                    <input type="file" name="image" id="image">



                </div>
                <div class="form-group">


                    @{ <select asp-for="SubCategoryId"
                               asp-items="@(new SelectList(ViewBag.Category,"SubCategoryId","Name"))">

                            <option>Ընտրել Բաժինը</option>
                        </select>
                    }

                </div>
                <div class="form-group">
                    <label class="text-left">Սլայդի համար ավելացնել</label>
                    <input type="checkbox" asp-for="IfFavorite" style="height:30px;width:30px" />

                </div>

                <div class="form-group">
                    <input class="text-left btn btn-default" type="submit" value="Փոփոխել" />
                    <a class="text-left btn btn-default" asp-action="index">Չեղարկել</a>
                </div>


            </form>
        </div>
    </div>


</div>
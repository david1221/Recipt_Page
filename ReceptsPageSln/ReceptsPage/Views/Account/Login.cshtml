@model ReceptsPage.IdentityViewModels.LoginViewModel
@{
    ViewBag.Title = "User Login";
}
<div class="row">
    <div class="col-md-6">
        <form method="post" asp-controller="Account" asp-action="Login"
                    asp-route-returnUrl="@Model.ReturnUrl">
            <h2>Մուտք գործել </h2><hr />
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="RememberMe"></label>
                <input asp-for="RememberMe" />
            </div>
            <div>
                <input type="submit" value="Մուտք" />
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h2>Արագ մուտք հետևյալի միջոցով</h2><hr />
        <form method="post" asp-action="ExternialLogin" asp-route-returnUrl="@Model.ReturnUrl">
            @{ if (Model.ExternalLogins.Count != 0)
                {

                    @foreach (var item in Model.ExternalLogins)
                    {
                        <button type="submit" class="btn btn-primary" name="provider" value="@item.Name" title="Մուտք գործել @item.DisplayName-ի միջոցով">
                            @item.DisplayName
                        </button>
                        <span style="margin-left:20px;"></span>
                    }

                }
                else
                {

                    <button type="submit" class="btn btn-primary" name="provider" value="Google" title="Մուտք գործել Google-ի միջոցով">
                       Google
                    </button>
                    <span style="margin-left:20px;"></span>

                    <button type="submit" class="btn btn-primary" name="provider" value="Facebook" title="Մուտք գործել Facebook-ի միջոցով">
                        Facebook
                    </button>
                    <span style="margin-left:20px;"></span>

                }
            }

        </form>

    </div>
</div>

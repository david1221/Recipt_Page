@using PagedList.Core;
@model IPagedList<ReceptsPage.ViewModels.ImageAll>

@{

    ViewData["Title"] = "Նկարներ";

}


<div class="row">


    @foreach (var entity in Model.Cast<ImageAll>())
    {

        <div class="left-up-col col-lg-4 ">


            <div class="content-justify img-gen-size">
                @{if (entity.image != null)
                    {
                        var base64 = Convert.ToBase64String(entity.image);
                        var imgsrc = string.Format("data:image/jpeg;base64,{0}", base64);
                        <a asp-controller="@entity.category" asp-action="@entity.action" asp-route-id="@entity.ArticleId" class="text-center"> <img class="img-thumbnail" src="@imgsrc" title="@entity.Title" /></a>
                    }
                }
            </div>


        </div>
    }
</div>
<nav aria-label="ArticleP Padding">


    <pager class="pagination" list="@Model" asp-action="PageArticleImage" asp-controller="BarArticleP" asp-route-query="@Model" />

</nav>
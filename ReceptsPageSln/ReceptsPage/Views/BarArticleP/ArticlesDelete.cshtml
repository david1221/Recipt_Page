@model BarArticleP
@{
    ViewData["Title"] = "Ջնջեել բղադրատոմսը";
}

<div class="col-md-12 ">

    <h1 class="text-center single-page-h1">@Model.Title</h1>
    <div class="col-lg-11 single-page-desc">
        <p class="single-page-p">@Model.Description</p>

        <div class="content-justify ">
            @{
                var base64 = Convert.ToBase64String(Model.ImgGeneral ?? new byte[0]);
                var imgsrc = string.Format("data:image/jpeg;base64,{0}", base64);
            }
            @if (!string.IsNullOrEmpty(base64))
            {
                <img class="single-page-img" src="@imgsrc" />
            }

        </div>


    </div>
</div>
<div class="text-center">
    <form class="text-center col-lg-11" style="margin:5px 0px" asp-controller="BarArticleP" asp-action="ArticlesPostDelete" asp-route-id="@Model.BarArticleId" method="post">

        <input type="submit" id="Submit1" value="Համոզվա՞ծ եք,որ ցանկանում եք ջնջել" />
